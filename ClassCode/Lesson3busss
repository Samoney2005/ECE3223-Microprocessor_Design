#include "mbed.h"

BusOut display(p5, p6, p7, p8, p9, p10, p11, p12);

int segConvert(int symbol)
{
    if (symbol == 0) {
        return 0b00111111;
    }
    if (symbol == 1) {
        return 0b00110000;
    }
    if (symbol == 2) {
        return 0b01011011;
    }
    if (symbol == 3) {
        return 0b01001111;
    }
    return 0;
}

int main()
{
    while (true) {
        for (int i = 0; i <= 3; i++) {
            display = segConvert(i);
            wait_us(500000);
        }
    }
}
